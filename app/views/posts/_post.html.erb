<div class="row">
	<div class="span0 well text-center">
		<%= link_to vote_post_path(post, vote: true), method: 'post' do %>
			<i class="icon-arrow-up"></i>
		<% end %>
		<div class="text-center">
			score: <%= post.total_votes %>
		</div>
		<%= link_to vote_post_path(post, vote: false), method: 'post' do %>
			<i class="icon-arrow-down"></i>
		<% end %>
	</div>

	<div class="span8 well">
		<%= render post.categories %>
		<h4><%= link_to post.title, fix_url(post.url) %></h4>
		<p><%= post.description %></p>
		<p>
			<span class="quiet">posted by</span> <%= link_to(post.user.username, user_path(post.user)) %>
			<small>at <%= display_datetime(post.created_at) %></small>
		</p>
		<small>
			<span>
				<%= link_to("#{post.comments.size} comments", post_path(post)) %>
			</span>
			<% if logged_in? && current_is_creator?(post) %>
				<span>
					[<%= link_to('edit', edit_post_path(post)) %>]
				</span>
			<% end %>
		</small>
	</div>
</div>