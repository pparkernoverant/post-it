<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) || msg.is_a?(Symbol) %>
    <div class="alert alert-<%= name.to_s == "notice" ? "success" : "error" %>">
      <a class="close" data-dismiss="alert">&#215;</a>
      <%= content_tag :div, msg, :id => "flash_#{name.to_s}" %>
    </div>
  <% end %>
<% end %>
